@app.route('/liaotian')#在此从全局变量siliaouser中取得请求私聊用户的名字，并用它渲染返回的私聊界面的html
def liaotian():
    session =  request.environ['beaker.session']
    username = "学生3"
    mima = "123456"
    #username = session.get('username')
    #mima = session.get('mima')
    print "mimahe username",username,mima
    student = {"学生1":["学生1","zhi1"],"学生2":["学生2","zhi2"],"学生3":["学生3","zhi3"]} 
    return template('views/btl_chat_group_upd9',student=student,session = session,username = username,mima=mima)


