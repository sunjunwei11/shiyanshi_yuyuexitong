class User:
    def __init__(self,wsocket):
        self.username = ''
        self.wsocket = wsocket
        self.wsid = str(id(wsocket))
        self.date = ''
        self.message = ''
        self.datetime = ''
        self.status = '1'
        self.siliao = '0'

